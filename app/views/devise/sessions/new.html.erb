<div class="container container-fullscreen pt-4">
  <h2 class="text-center form-header pt-8 pb-8">Sign in</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
    required: false,
    autofocus: true,
    input_html: { autocomplete: "email" } %>
    <%= f.input :password,
    required: false,
    input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>
  <div class="pt-6 pb-2 sign-in-btn">
    <%= f.button :submit, class: "green-btn", value:"Sign in" %>
  </div>
  <% end %>
  <div class="form-shared-links sign-in-btn">
    <%= render "devise/shared/links" %>
  </div>
</div>
