<div class="container-fullscreen">
<%= simple_form_for @trip do |f| %>
<div class="criteria-slider">
<!-- Planning 1 -->
  <div class="form-container-criteria-slider">
    <h3 class="text-center trip-header-new ">Create your trip</h3>
    <div class="tabs-container">
      <div class="tab-button tab-active"><p>1</p></div>
      <hr>
      <div class="tab-button"><p>2</p></div>
      <hr>
      <div class="tab-button"><p>3</p></div>
      <hr>
      <div class="tab-button" id="go-button"><p>Go</p></div>
    </div>
    <div class="d-flex justify-content-center">
      <div class="col-md-8 mt-3">
        <!-- Planning 1 -->
        <!-- <div class="d-flex justify-content-center"> -->
        <!-- <div class="col-md-6 mt-8"> -->
        <div class="d-flex justify-content-around">
          <%= f.association :arrival_city %>
          <%= f.association :departure_city %>
        </div>
        <div class="d-flex justify-content-around">

        <%= f.input :start_date, as: :string, input_html: { id: "range_start" } %>
        <%= f.input :end_date, as: :string, input_html: { id: "range_end" } %>
        <%= hidden_field_tag :criteria %>
         </div>
        <div class="mb-4 d-flex justify-content-start position-next">
          <span class="btn-next green-btn-criteria right-side-btn">
            Next
          </span>
        </div>
      </div>
    </div>
  </div>
  <!-- Planning 2 -->
  <div class="form-container-criteria-slider">
    <h3 class="text-center trip-header-new">Choose your preferences</h3>
    <div class="tabs-container">
      <div class="tab-button">1</div>
      <hr>
      <div class="tab-button tab-active">2</div>
      <hr>
      <div class="tab-button">3</div>
      <hr>
      <div class="tab-button" id="go-button">Go</div>
    </div>
    <div class="d-flex justify-content-center pb-4">
      <div class="col-md-7 mt-6">
        <!-- <form action="/trips/<%= @trip.id %>" method="post"> -->
        <!-- <form action="/trips" method="post"> -->
        <!--           <input name="_method" type="hidden" value="create" />
        -->          <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
         <div class="d-flex justify-content-around mb-8">
        <div class="form-group pr-4 form-control-label">
          <label for="beach" class="d-flex justify-content-around">Beach</label>
          <input type="range" class="custom-range" name="trip[criteria][beach]" min="0" max="100" step="1" id="beach" >

        </div>
        <div class="form-group pl-4 form-control-label">
          <label for="sport" class="d-flex justify-content-around">Sport</label>
          <input type="range" class="custom-range" name="trip[criteria][sport]" min="0" max="100" step="1" id="sport">
        </div>
      </div>
       <div class="d-flex justify-content-around ">
        <div class="form-group pr-4 form-control-label">
          <label for="culture" class="d-flex justify-content-around">Culture</label>
          <input type="range" class="custom-range" name="trip[criteria][culture]" min="0" max="100" step="1" id="culture">
        </div>
        <div class="form-group pl-4 form-control-label">
          <label for="visit" class="d-flex justify-content-around">Visit</label>
          <input type="range" class="custom-range" name="trip[criteria][visit]" min="0" max="100" step="1" id="visit">
        </div>
         </div>
        <!--</form>  -->
      </div>
    </div>
    <div class="mb-4 d-flex justify-content-start position-next">
      <%#= f.button :submit, value: "Next",class: "btn green-btn-criteria" %>
        <button type="submit" class="btn green-btn-criteria right-side-btn-criteria">Next</button>

    </div>
  </div>
  <!-- Planning 3 -->
  <!-- <div>
    <h1 class="mb-4 text-center">Select activities</h1>
    <div class="d-flex justify-content-center">
      <div class="col-md-6 mt-8">
        <div class="form-post"> -->
          <!-- Inject categories here -->
        <!--  </div>
      </div>
    </div> -->
  </div>
</div>
<% end %>
</div>
