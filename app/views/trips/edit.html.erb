

 <div class="form-container form-border">
   <div class="tabs-container">
     <div class="tab-button tab-active">1</div>
     <hr>
     <div class="tab-button">2</div>
     <hr>
     <div class="tab-button">3</div>
   </div>
    <h1 class="mb-4 text-center">Choose preferences</h1>
    <div class="d-flex justify-content-center">
      <div class="col-md-6 mt-8">
        <form action="/trips/<%= @trip.id %>" method="post">
          <input name="_method" type="hidden" value="patch" />
          <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
          <div class="form-group">
            <label for="beach">Beach</label>
            <input type="text" class="form-control" id="beach" name="trip[criteria][beach]" placeholder="20%">
          </div>
          <div class="form-group">
            <label for="sport">Sport</label>
            <input type="text" class="form-control" id="sport" name="trip[criteria][sport]"placeholder="20%">
          </div>
          <div class="form-group">
            <label for="culture">Culture</label>
            <input type="text" class="form-control" id="culture" name="trip[criteria][culture]"placeholder="20%">
          </div>
          <div class="form-group">
            <label for="visit">Visit</label>
            <input type="text" class="form-control" id="visit" name="trip[criteria][visit]"placeholder="20%">
          </div>

            <button type="submit" class="green-btn">Next</button>
        </form>
      </div>
    </div>

</div>
