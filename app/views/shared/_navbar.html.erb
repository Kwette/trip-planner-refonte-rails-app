  <%= link_to root_path, class: "navbar-brand" do %>
  <%= image_tag "tripper_logo.png",style: "width:120px"%>
  </div>

  <% end %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
  <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
      <li class="nav-item">
        <%= link_to "My trips", trips_path, class: "nav-link" %>
      </li>
      <% end %>
      <li class="nav-item active">
        <%= link_to "New trip", new_trip_path, class: "nav-link" %>
      </li>

      <% if user_signed_in? %>
      <li class="nav-item dropdown">
        <%= image_tag 'jr.png', class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Log out", destroy_user_session_path, method: :delete, render: root_path, class: "dropdown-item" %>
        </div>
      </li>
      <% else %>
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <%= link_to "Sign in", new_user_session_path, class: "nav-link" %>
        </li>
        <li class="nav-item active">
          <%= link_to "Sign up", new_user_registration_path, class: "nav-link" %>
        </li>
      </ul>
      <% end %>
    </ul>
  </div>
</div>
